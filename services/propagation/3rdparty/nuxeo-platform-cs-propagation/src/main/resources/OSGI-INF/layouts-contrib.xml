<?xml version="1.0"?>

<!--
layouts-contrib.xml

Layout file for configuring screen layouts in the
user interface of Nuxeo EP's web application, for
viewing or editing CollectionSpace records stored
in the Nuxeo repository,

See the "Nuxeo Book" for an introductory description
of how to edit this file.  For instance, for Nuxeo EP 5.3:
http://doc.nuxeo.org/5.3/books/nuxeo-book/html/

$LastChangedRevision: $
$LastChangedDate: $
-->

<component name="org.collectionspace.propagation.layouts.webapp">

    <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
               point="layouts">

        <layout name="propagation">
            <templates>
                <template mode="any">/layouts/layout_default_template.xhtml</template>
            </templates>
            
            <rows>
				<row><widget>propType</widget></row>
				<row><widget>propComments</widget></row>
				<row><widget>reasonForProp</widget></row>
				<row><widget>extraSeeds</widget></row>
				<row><widget>numStarted</widget></row>
				
                <!-- FIXME: Add activityGroup when we determine how to add -->
                <!-- complex group fields to Nuxeo layouts -->
            </rows>
            
            <widget name="propType" type="text">
                <labels>
                    <label mode="any">propType</label>
                </labels>
                <translated>true</translated>
                <fields>
                    <field schema="propagations_common">propType</field>
                </fields>
                <properties widgetMode="edit">
                    <property name="styleClass">dataInputText</property>
                </properties>
            </widget>

            <widget name="propComments" type="text">
                <labels>
                    <label mode="any">propComments</label>
                </labels>
                <translated>true</translated>
                <fields>
                    <field schema="propagations_common">propComments</field>
                </fields>
                <properties widgetMode="edit">
                    <property name="styleClass">dataInputText</property>
                </properties>
            </widget>

            <widget name="reasonForProp" type="text">
                <labels>
                    <label mode="any">reasonForProp</label>
                </labels>
                <translated>true</translated>
                <fields>
                    <field schema="propagations_common">reasonForProp</field>
                </fields>
                <properties widgetMode="edit">
                    <property name="styleClass">dataInputText</property>
                </properties>
            </widget>

			<!-- TODO: probably incorrect, this is a boolean
				not text (type="text" and widgetMode="edit" bits) -->
            <widget name="extraSeeds" type="text">
                <labels>
                    <label mode="any">extraSeeds</label>
                </labels>
                <translated>true</translated>
                <fields>
                    <field schema="propagations_common">extraSeeds</field>
                </fields>
                <properties widgetMode="edit">
                    <property name="styleClass">dataInputText</property>
                </properties>
            </widget>
            
			<!-- TODO: possibly incorrect, this is an integer
				not text (type="text" and widgetMode="edit" bits) -->
            <widget name="numStarted" type="text">
                <labels>
                    <label mode="any">numStarted</label>
                </labels>
                <translated>true</translated>
                <fields>
                    <field schema="propagations_common">numStarted</field>
                </fields>
                <properties widgetMode="edit">
                    <property name="styleClass">dataInputText</property>
                </properties>
            </widget>
            
            <widget name="propagationReferenceNumber" type="text">
                <labels>
                    <label mode="any">propagationReferenceNumber</label>
                </labels>
                <translated>true</translated>
                <fields>
                    <field schema="propagations_common">propagationReferenceNumber</field>
                </fields>
                <properties widgetMode="edit">
                    <property name="styleClass">dataInputText</property>
                </properties>
            </widget>
            
        </layout>
    </extension>
</component>
