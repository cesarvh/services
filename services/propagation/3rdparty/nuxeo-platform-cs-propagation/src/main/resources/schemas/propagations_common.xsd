<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!--
    Propagation schema (XSD)
    
    Entity  : Propagation
    Part    : Common
    Used for: Nuxeo EP core document type

    $LastChangedRevision: 5941 $
